						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"event\": \"order.shipped\",\n    \"message\": \"Order has been shipped\",\n    \"timestamp\": \"2023-12-01T14:20:00Z\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/webhook",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"webhook"
							]
						}
					},
					"response": []
