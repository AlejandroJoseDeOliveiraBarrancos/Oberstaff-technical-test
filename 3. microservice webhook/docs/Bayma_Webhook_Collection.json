							"mode": "raw",
							"raw": "{\n    \"event\": \"user.created\",\n    \"message\": \"New user account created\",\n    \"timestamp\": \"2023-12-01T10:30:00Z\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/webhook",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"webhook"
							]
						}
					},
					"response": []
