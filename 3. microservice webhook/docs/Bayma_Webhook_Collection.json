{
	"info": {
		"_postman_id": "bayma-webhook-collection",
		"name": "Bayma Webhook Receiver",
		"description": "Collection for testing the Bayma Webhook Receiver microservice",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/",
					"host": [
						"{{base_url}}"
					],
					"path": [
						""
					]
				},
				"description": "Check if the webhook service is running"
			},
			"response": []
		},
		{
			"name": "Receive Webhook",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"event\": \"user.created\",\n    \"message\": \"New user registered successfully\",\n    \"timestamp\": \"2023-12-01T10:30:00Z\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/webhook",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"webhook"
					]
				},
				"description": "Send a webhook notification to the receiver"
			},
			"response": []
		},
		{
			"name": "Get All Webhooks",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/webhooks?skip=0&limit=100",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"webhooks"
					],
					"query": [
						{
							"key": "skip",
							"value": "0"
						},
						{
							"key": "limit",
							"value": "100"
						}
					]
				},
				"description": "Retrieve all webhook logs with pagination"
			},
			"response": []
		},
		{
			"name": "Get Webhook by ID",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/webhooks/1",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"webhooks",
						"1"
					]
				},
				"description": "Retrieve a specific webhook log by ID"
			},
			"response": []
		},
		{
			"name": "Test Different Events",
			"item": [
				{
